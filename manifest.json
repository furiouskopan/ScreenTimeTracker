{
  "manifest_version": 2,
  "name": "Screen Time Tracker",
  "version": "1.0",
  "permissions": ["tabs", "storage", "notifications"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "icons": {
    "48": "icons/icon.png"
  }
}
